<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>BOOK MANAGEMENT</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="eCommerce HTML Template Free Download" name="keywords">
    <meta content="eCommerce HTML Template Free Download" name="description">
    
    <!-- Favicon -->
    <link rel="shortcut icon" href="../img/favicon.ico">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap" rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="../lib/slick/slick.css" rel="stylesheet">
    <link href="../lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="../css/style.css" rel="stylesheet">
</head>

<body style="background-image: url('../img/background2.jpg');">

    <!-- Nav Bar Start -->
    <div class="nav">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-md bg-dark navbar-dark">
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto">
                        <a href="/users/trang-chu" class="nav-item nav-link active">Trang Chủ</a>
                        <a href="/gio-hang" class="nav-item nav-link">Giỏ Hàng</a>
                        <a href="/thanh-toan" class="nav-item nav-link">Thanh toán</a>
                        <a href="" class="nav-item nav-link">Tài khoản của bạn</a>
                        <a href="/users/dang-xuat" class="nav-item nav-link">Đăng xuất</a>
                        </div>
                    </div>

                </div>
            </nav>
        </div>
    </div>
    <!-- Nav Bar End -->

     <!-- Bottom Bar Start -->
     <div class="bottom-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <div class="logo">
                        <a href="../users/trang-chu">
                            <img src="../img/favicon.ico" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="search">
                        <input type="text" placeholder="Search">
                        <button><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bottom Bar End -->

    <!-- My Account Start -->
    <div class="my-account">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
                        <a class="nav-link active" id="dashboard-nav" data-toggle="pill" href="#category-tab" role="tab"><i class="fa fa-tachometer-alt"></i>Thể loại</a>
                        <a class="nav-link" id="account-nav" data-toggle="pill" href="#product-tab" role="tab"><i class="fa fa-user"></i>Kho Sách</a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="category-tab" role="tabpanel" aria-labelledby="orders-nav">
                            <div class="table-responsive">
                                <form action="/book/addnew" method="get">
                                    <div class="col-md-12">
                                        <button class="btn" style="text-align: right;">Thêm thể loại</button>
                                        <br><br>
                                    </div>
                                </form>
                                <table class="table table-bordered">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>ID</th>
                                            <th>Thể loại</th>
                                            <th>Số lượng</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (let i of list) { %>
                                            <tr>
                                                <td><%= i.idCat %></td>
                                                <td><%= i.nameCat%></td>
                                                <td><%= i.number %></td>
                                                <td><a href="/book/detail <%= i.idCat %>" class="btn" type="button">Edit</a><a href="/book/delete/<%= i.idCat %>" class="btn" type="button">Delete</a></td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                                <% if(detail != null)
                                { %>
                                    <h4>Chỉnh sửa thể loại</h4>
                                        <form action="/book/edit-category" method="post">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label for="idCat">Mã thể loại</label>
                                                    <input id="idCat" name="idCat" value="<%=detail.idCat %>" class="form-control" type="text" placeholder="Mã thể loại" readonly>
                                                </div>
                                                <div class="col-md-6">
                                                    <label for="nameCat">Tên thể loại</label>
                                                    <input id="nameCat" name="nameCat" value="<%=detail.nameCat %>" class="form-control" type="text" placeholder="Tên thể loại">
                                                </div>
                                                <div class="col-md-6">
                                                    <label for="number">Số lượng</label>
                                                    <input id="number" name="number" value="<%=detail.number %>" class="form-control" type="text" placeholder="Số lượng">
                                                </div>
                                                <div class="col-md-12">
                                                    <button class="btn">Sửa</button>
                                                    <br><br>
                                                </div>
                                            </div>
                                        </form>
                                    <% }
                                    else
                                    { %>
                                        <h4>Thêm thể loại mới</h4>
                                        <form action="/book/add-new-category" method="post">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label for="nameCat">Tên thể loại</label>
                                                    <input id="nameCat" name="nameCat" value="" class="form-control" type="text" placeholder="Tên thể loại">
                                                </div>
                                                <div class="col-md-6">
                                                    <label for="number">Số lượng</label>
                                                    <input id="number" name="number" value="" class="form-control" type="text" placeholder="Số lượng">
                                                </div>
                                                <div class="col-md-12">
                                                    <button class="btn">Thêm</button>
                                                    <br><br>
                                                </div>
                                            </div>
                                        </form>
                                    <% } %>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="product-tab" role="tabpanel" aria-labelledby="account-nav">
            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- My Account End -->
    
    <!-- Back to Top -->
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="../lib/easing/easing.min.js"></script>
    <script src="../lib/slick/slick.min.js"></script>

    <!-- Template Javascript -->
    <script src="../js/main.js"></script>

    
</body>

</html>